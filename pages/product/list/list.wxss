/* pages/product/list/list.wxss */
.pro-list {
  display: flex;
  flex-flow: column wrap;
  background-color: #f5f5f5;
}
.pro-item {
  position: relative;
  display: flex;
  flex-flow: column nowrap;
  padding:20rpx 34rpx;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #ddd;
  border-top: 1rpx solid #ddd;
  background: #fff;
}
.item-title {
  display: block;
  font-size: 36rpx;
  color: #6d6d6d;
  margin-bottom: 24rpx;
}
.item-content {
  display: flex;
  flex-wrap: row nowrap;
  justify-content: space-between;
  align-items: center;
  flex-flow: row nowrap;
}
.item-content .limit {
  display: block;
}
.item-content .limit text{
  display: block;
  color: #6d6d6d;
  font-size: 28rpx;
  line-height: 1.6;
}
.item-content .rate {
  display: block;
  font-size: 48rpx;
  color: #da3412;
  font-weight: bold;
}