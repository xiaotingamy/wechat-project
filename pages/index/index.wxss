/**index.wxss**/
.login-row {
  padding: 0 34rpx;
  height: 110rpx;
  background-color: #fff;
}
.title {
  float:left;
  font-size: 32rpx;
  line-height: 110rpx;
}
.btns{
  float:right;
  padding-top: 26rpx;
}
.l-btn {
  display: inline-block;
  width: 100rpx;
  height: 55rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #da3412;
  padding-right: 0;
  padding-left: 0;
  line-height: 57rpx;
}
.r-btn {
  display: inline-block;
  margin-left: 10rpx;
  width: 100rpx;
  height: 55rpx;
  font-size: 24rpx;
  color: #da3412;
  background-color: transparent;
  border-color: #da3412; 
  padding-right: 0;
  padding-left: 0;
  line-height: 57rpx;
}
.swiper {
  height: 240rpx;
}
.slide-image {
  width:100%;
  height: 240rpx;
}

.recommend-head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 68rpx;
  border-bottom:1rpx solid #ddd;
  padding: 0 34rpx;
  background: -webkit-linear-gradient(top, #fff , #f9f9f9);
}
.recommend-title {
  display: block;
  line-height: 68rpx;
  font-size: 32rpx;
}
.recommend-more {
  display: flex;
  align-items: center;
}
.more{
  display: block;
  font-size:24rpx;
}
.item-arrow {
  width: 32rpx;
  height: 32rpx;
}
.recommend-list {
  display: flex;
  flex-flow: column wrap;
  background-color: #f5f5f5;
}
.recommend-item {
  position: relative;
  display: flex;
  flex-flow: column nowrap;
  padding:20rpx 34rpx;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #ddd;
  background: #fff;
}
.item-title {
  display: block;
  font-size: 36rpx;
  color: #6d6d6d;
  margin-bottom: 24rpx;
}
.item-content {
  display: flex;
  flex-wrap: row nowrap;
  justify-content: space-between;
  align-items: center;
  flex-flow: row nowrap;
}
.item-content .limit {
  display: block;
}
.item-content .limit text{
  display: block;
  color: #6d6d6d;
  font-size: 28rpx;
  line-height: 1.6;
}
.item-content .rate {
  display: block;
  font-size: 48rpx;
  color: #da3412;
  font-weight: bold;
}
.item-content .buy-btn {
  display: block;
  background: #da3412;
  color: #fff;
  font-size: 36rpx;
  padding: 14rpx 30rpx;
  line-height: 1;
  margin:0;
}